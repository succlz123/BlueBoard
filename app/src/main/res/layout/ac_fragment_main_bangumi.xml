<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/swipe_fresh_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ac_fragment_bangumi_recycler_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/recycle_view_bottom"
        android:paddingLeft="@dimen/recycle_view_margin"
        android:paddingRight="@dimen/recycle_view_margin"
        android:scrollbars="none"/>

</android.support.v4.widget.SwipeRefreshLayout>

