<resources>

    <style name="AppTheme" parent="BaseTheme">
        <!--状态栏颜色-->
        <item name="android:statusBarColor">@color/pink_base_dark</item>
        <!--&lt;!&ndash;底部导航栏透明&ndash;&gt;-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <!--<item name="android:navigationBarColor">@android:color/transparent</item>-->

    </style>

    <!--状态栏透明 DrawerLayout-->
    <style name="TranslucentStatusTheme" parent="AppTheme">
        <!--drawablelayout覆盖在toolbar上-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!--状态栏透明-->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--底部导航栏透明 -->
    <style name="TranslucentNavigationTheme" parent="AppTheme">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

</resources>